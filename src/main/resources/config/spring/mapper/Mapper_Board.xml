<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="Board">
	<select id="SELECT" parameterType="java.util.HashMap" resultType="com.portal.complex.boardVo.BoardVo">
		SELECT * 
		FROM TBL_BOARD
	</select>
	<select id="TOTALRECOND" resultType="int">
		SELECT COUNT(NID) AS TOTALRECOND 
		FROM TBL_BOARD
	</select>
	<select id="sss" parameterType="java.util.HashMap" resultType="com.portal.complex.boardVo.BoardVo">
		<![CDATA[ 
		SELECT *
  			FROM (SELECT ROWNUM AS RNUM, Z.* 
    			FROM (SELECT * 
        			FROM TBL_BOARD 
        			ORDER BY NID DESC) Z 
    			WHERE ROWNUM <=#{record_end_no}) 
  		WHERE RNUM >=#{record_Start_no}
  		]]>
	</select>
	
</mapper>